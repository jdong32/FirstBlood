<project name="FirstBlood">
	<property 	name="src.dir" 		value="FirstBlood"/>
	<property 	name="build.dir" 	value="build"/>
	<property 	name="classes.dir" 	value="${build.dir}/classes"/>
	<property 	name="jar.dir" 		value="${build.dir}/jar"/>
	<property 	name="lib.dir"		value="lib"/>
	<property 	name="main-class" 	value="FirstBlood.myWindow"/>

	<path id="classpath">
		<fileset dir="${lib.dir}" includes="**/*.jar"/>
	</path>


	<target name="clean">
		<delete dir="${build.dir}"/>
	</target>

	<target name="compile">
		<mkdir dir="${classes.dir}"/>
		<javac srcdir="${src.dir}" destdir="${classes.dir}" encoding="utf-8" classpathref="classpath"/>
	</target>

	<target name="jar">
		<mkdir dir="${jar.dir}"/>
		<jar destfile="${jar.dir}/FirstBlood.jar" basedir="${classes.dir}">
			<manifest>
				<attribute name="Main-Class" value="${main-class}"/>
			</manifest>
		</jar>
	</target>

 	<target name="run" depends="jar">
		<java fork="true" classname="${main-class}">
			<classpath>
				<path refid="classpath"/>
				<path location="${jar.dir}/${ant.project.name}.jar"/>
			</classpath>
		</java>
	</target>
</project>
